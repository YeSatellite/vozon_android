<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/corner"
                android:topLeftRadius="@dimen/corner" />
            <solid android:color="@color/appBlue"/>
        </shape>
    </item>
    <item android:state_checked="false" android:right="-1dp">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/corner"
                android:topLeftRadius="@dimen/corner" />
            <stroke android:width="1dp" android:color="@color/appBlue" />
        </shape>
    </item>
</selector>