<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackground"
    tools:context=".ui.courier.transport.TransportNewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:background="?editTextBackground"
            android:orientation="horizontal">

            <TextView
                style="@style/ProfileEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Фото" />

            <ImageView
                android:id="@+id/v_image1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/add_image" />

            <ImageView
                android:id="@+id/v_image2"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/add_image" />

        </LinearLayout>

        <EditText
            android:id="@+id/v_number"
            style="@style/ProfileEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Гос. номер"
            android:inputType="textPersonName" />

        <include
            layout="@layout/include_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/v_mark_"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ProfileEditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/mark" />

            <EditText
                android:id="@+id/v_mark"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/next_"
                android:gravity="end"
                android:focusable="false"
                android:hint="Выберите марку"
                android:inputType="text"
                android:textSize="15sp"
                tools:text="Toyota" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_model_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ProfileEditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/model" />

            <EditText
                android:id="@+id/v_model"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/next_"
                android:focusable="false"
                android:gravity="end"
                android:hint="Выберите модель"
                android:inputType="text"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_t_type_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ProfileEditTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Тип транспорта" />

            <EditText
                android:id="@+id/v_t_type"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/next_"
                android:focusable="false"
                android:gravity="end"
                android:hint="@string/enter_t_type"
                android:inputType="text"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingEnd="@dimen/space"
            android:paddingStart="@dimen/space"
            android:paddingTop="@dimen/space"
            android:text="ГАБАРИТЫ"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/v_length"
            style="@style/ProfileEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Длина"
            android:inputType="numberDecimal" />

        <include
            layout="@layout/include_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/v_width"
            style="@style/ProfileEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ширина"
            android:inputType="numberDecimal" />

        <include
            layout="@layout/include_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/v_height"
            style="@style/ProfileEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Высота"
            android:inputType="numberDecimal" />

        <include
            layout="@layout/include_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingEnd="@dimen/space"
            android:paddingStart="@dimen/space"
            android:paddingTop="@dimen/space"
            android:textAllCaps="true"
            android:text="@string/extra"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/v_load_type"
            style="@style/ProfileEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/next_"
            android:focusable="false"
            android:hint="@string/load_type"
            android:inputType="text" />

        <include
            layout="@layout/include_line"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <EditText
            android:id="@+id/v_comment"
            style="@style/ProfileEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Комментарии"
            android:inputType="textMultiLine"
            android:minLines="4" />

    </LinearLayout>
</ScrollView>