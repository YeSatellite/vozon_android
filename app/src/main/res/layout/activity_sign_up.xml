<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackground"
    tools:context=".ui.auth.SignUpActivity">

    <TextView
        android:id="@+id/c_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        tools:text="Кто вы по жизни?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/c_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c_2">

        <LinearLayout
            android:id="@+id/v_client"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="40dp"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="228dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/client" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                style="@style/LargeTextViewStyle"
                android:text="Клиент" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_courier"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="277dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/truck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                style="@style/LargeTextViewStyle"
                android:text="Перевозчик" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>