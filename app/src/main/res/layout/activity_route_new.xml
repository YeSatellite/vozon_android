<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackground"
    android:orientation="vertical"
    tools:context=".ui.auth.XSignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space">

            <include
                layout="@layout/include_line"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/v_transport"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:drawableEnd="@drawable/next_"
                android:focusable="false"
                android:hint="Транспорт" />

            <EditText
                android:id="@+id/v_start_point"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/next_"
                android:focusable="false"
                android:hint="@string/loading"
                android:inputType="text" />

            <include
                layout="@layout/include_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/v_end_point"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/next_"
                android:focusable="false"
                android:hint="Отгрузка"
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingEnd="@dimen/space"
                android:paddingStart="@dimen/space"
                android:paddingTop="@dimen/space"
                android:text="ДАТА"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/v_shipping_date"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="Дата"
                android:inputType="textPersonName" />

            <include
                layout="@layout/include_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/v_shipping_time"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="Время"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingEnd="@dimen/space"
                android:paddingStart="@dimen/space"
                android:paddingTop="@dimen/space"
                android:text="ДОПОЛНИТЕЛЬНО"
                android:textSize="12sp" />

            <include
                layout="@layout/include_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/v_comment"
                style="@style/ProfileEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Комментарии"
                android:inputType="textMultiLine"
                android:minLines="4" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>