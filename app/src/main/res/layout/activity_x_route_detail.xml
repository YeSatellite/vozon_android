<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/v_images"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="?appBackground">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/editTextBackground"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/v_avatar"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginEnd="@dimen/space"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dp"
                        tools:srcCompat="@drawable/tmp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/v_name"
                            style="@style/LargeTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Peter Quill" />

                        <TextView
                            android:id="@+id/v_rationg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Физическое лицо • 4.3" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/v_call"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/call_green" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дата и время"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/v_date"
                    style="@style/LargeTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    tools:text="14, Май • 13:30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transport_position"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/v_start_point"
                    style="@style/LargeTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    tools:text="Павлодар, Каза*стан, Алтынсарина 67" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/destination"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/v_end_point"
                    style="@style/LargeTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/not_matter" />

                <include
                    layout="@layout/include_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="@dimen/space"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Гос. номер"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="123 QZQ 05" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Марка"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Toyota" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Модель"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Corolla" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/t_type"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_t_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Corolla" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Длина"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="3м" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ширина"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="3м" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Высота"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="1м" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/load_type"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_load_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Грузчики" />
                </LinearLayout>

                <include
                    layout="@layout/include_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/v_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space"
                    android:textSize="17sp"
                    android:theme="@style/LargeTextViewStyle"
                    tools:text="Far far away, behind the word mountains, far from the countries Vokalia and Consanantia, there live the texts" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>