<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?appBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/v_images"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="?appBackground">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/editTextBackground"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дата и время"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/v_date"
                    style="@style/LargeTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    tools:text="14, Май • 13:30" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Погрузка"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/v_start_point"
                    style="@style/LargeTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    tools:text="Павлодар, Каза*стан, Алтынсарина 67" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отгрузка"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/v_end_point"
                    style="@style/LargeTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    tools:text="Алматы, Каза*стан, Саина 65" />

                <include
                    layout="@layout/include_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="@dimen/space"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Направления"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Меж. город" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Категория"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text=" посылки"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="ПереVOZка" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Способ оплаты"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_payment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Наличный расчет" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/volume"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="0.000375 м^3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вес"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_mass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="1 гр" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="1 гр" />
                </LinearLayout>

                <include
                    layout="@layout/include_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/v_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space"
                    android:textSize="17sp"
                    android:theme="@style/LargeTextViewStyle"
                    tools:text="Far far away, behind the word mountains, far from the countries Vokalia and Consanantia, there live the texts" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:background="?android:attr/editTextBackground"
                android:orientation="vertical"
                android:padding="@dimen/space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_icon">

                        <ImageView
                            android:id="@+id/v_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/car" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/v_transport"
                            style="@style/LargeTextViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Peter Quill" />

                        <TextView
                            android:id="@+id/v_t_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="asdasd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Способ оплаты"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_payment_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Наличный расчет" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Прочие условия"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_other_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="0.000375 м^3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/have_loaders"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_have_loaders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Yes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/v_price2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textSize="17sp"
                        android:theme="@style/LargeTextViewStyle"
                        tools:text="Yes" />
                </LinearLayout>

                <include
                    layout="@layout/include_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/v_comment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space"
                    android:textSize="17sp"
                    android:theme="@style/LargeTextViewStyle"
                    tools:text="Far far away, behind the word mountains, far from the countries Vokalia and Consanantia, there live the texts" />

            </LinearLayout>

            <Button
                android:id="@+id/v_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="@dimen/space"
                android:background="?android:attr/editTextBackground"
                android:textSize="15sp"
                android:theme="@style/LargeTextViewStyle"
                tools:text="Button" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>